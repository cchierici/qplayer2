<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/tracklist_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/black"              
    android:layout_gravity="center">

    <ImageView android:id="@+id/tracklist_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/textview_height"
        android:scaleType="centerInside"       
        android:gravity="center_vertical"
        android:src="@drawable/icon_note_selected"
        android:padding="5dp"/>

    <TextView android:id="@+id/tracklist_item_text"
        style="@style/PlayerTextStyle"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/textview_height"
        android:layout_marginLeft="15dp"
        android:gravity="center_vertical"
        android:text="holla di bolla"/>
	           
</LinearLayout>