<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >

    <LinearLayout
        android:id="@+id/player_top_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/player_pitch_area"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <org.qstuff.qplayer.ui.util.VerticalSeekBar
                android:id="@+id/pitch_control"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:background="@null"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/seekbar_progress_blue"
                android:thumb="@drawable/seekbar_thumb" />
        
        </LinearLayout>
		
		<LinearLayout
            android:id="@+id/player_shift_area"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="2" >

            <TextView
                android:id="@+id/player_shift_placeholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="SHIFT"
                android:textSize="15sp" />

        </LinearLayout>
    
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/player_buttons_row_one"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
        android:layout_below="@+id/player_top_area"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
   	
   		<ImageButton
   		    android:id="@+id/player_button_previous"
            style="@style/PlayerButtonStyle"
	   	    android:layout_width="0dp"
	   	    android:layout_height="60dp"
	   	    android:src="@drawable/av_previous"
    		android:layout_weight="1" />
   	
   		<ImageButton
   		    android:id="@+id/player_button_play"
            style="@style/PlayerButtonStyle"
			android:layout_width="0dp"
			android:layout_height="60dp"
	   	    android:src="@drawable/av_play"
    		android:layout_weight="1" />
   		
   		<ImageButton
   		    android:id="@+id/player_button_next"
            style="@style/PlayerButtonStyle"
			android:layout_width="0dp"
			android:layout_height="60dp"
	   	    android:src="@drawable/av_next"
    		android:layout_weight="1" />
   		
   	</LinearLayout>

    <LinearLayout
        android:id="@+id/player_buttons_row_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:layout_below="@+id/player_buttons_row_one"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

    	<ImageButton
   		    android:id="@+id/player_button_shuffle"
            style="@style/PlayerButtonStyle"
	   	    android:layout_width="0dp"
			android:layout_height="60dp"
	   	    android:src="@drawable/av_shuffle"
    		android:layout_weight="1" />
   	
   		<ImageButton
   		    android:id="@+id/player_button_repeat"
            style="@style/PlayerButtonStyle"
	   	    android:layout_width="0dp"
			android:layout_height="60dp"
	   	    android:src="@drawable/av_repeat"
    		android:layout_weight="1" />
   		
   		<ImageButton
   		    android:id="@+id/player_button_fullscreen"
            style="@style/PlayerButtonStyle"
	   	    android:layout_width="0dp"
			android:layout_height="60dp"
	   	    android:src="@drawable/av_full_screen"
    		android:layout_weight="1" />
    
    </LinearLayout>

    <LinearLayout 
        android:id="@+id/player_current_track"
        android:orientation="horizontal"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
        android:layout_below="@+id/player_buttons_row_two">
	    	
	   	<TextView
            android:id="@+id/player_text_current_track"
	   	    android:layout_width="match_parent"
	   	    android:layout_height="wrap_content"
	   	    android:layout_marginLeft="15dp"
	   	    android:layout_marginRight="15dp"
	   	    android:layout_marginBottom="5dp"
	   	    android:layout_marginTop="5dp"
	   	    android:background="@color/white"
	   	    android:gravity="center"
	   	    android:text="no track loaded"
	   	    android:textColor="@color/black"
	   	    android:textSize="20sp" />
	
	</LinearLayout>
   	
</RelativeLayout>

