<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white" >
    
    <!-- Player Version -->
    <TextView
        android:id="@+id/player_text_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        style="@style/PlayerTextStyle"
        android:text="   Q.player V 1.0   " />

    <!-- Player Main Buttons Row -->
    <LinearLayout 
        android:id="@+id/player_buttons_row_one"
    	android:layout_width="match_parent"
    	android:layout_height="wrap_content"
        android:layout_above="@+id/player_buttons_row_two"
        android:layout_toRightOf="@+id/pitch_control"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
   	
   		<ImageButton
   		    android:id="@+id/player_button_previous"
            style="@style/PlayerButtonStyle"
	   	    android:layout_width="0dp"
	   	    android:layout_height="wrap_content"
	   	    android:src="@drawable/av_previous"
    		android:layout_weight="1" />
   	
   		<ImageButton
   		    android:id="@+id/player_button_play"
            style="@style/PlayerButtonStyle"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
	   	    android:src="@drawable/av_play"
    		android:layout_weight="1" />
   		
   		<ImageButton
   		    android:id="@+id/player_button_next"
            style="@style/PlayerButtonStyle"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
	   	    android:src="@drawable/av_next"
    		android:layout_weight="1" />
   		
   	</LinearLayout>

    <!-- Player Secondary Buttons Row -->
    <LinearLayout
        android:id="@+id/player_buttons_row_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

    	<ImageButton
   		    android:id="@+id/player_button_shuffle"
            style="@style/PlayerButtonStyle"
	   	    android:layout_width="0dp"
			android:layout_height="wrap_content"
	   	    android:src="@drawable/av_shuffle"
    		android:layout_weight="1" />
   	
   		<ImageButton
   		    android:id="@+id/player_button_repeat"
            style="@style/PlayerButtonStyle"
	   	    android:layout_width="0dp"
			android:layout_height="wrap_content"
	   	    android:src="@drawable/av_repeat"
    		android:layout_weight="1" />
   		
   		<ImageButton
   		    android:id="@+id/player_button_fullscreen"
            style="@style/PlayerButtonStyle"
	   	    android:layout_width="0dp"
			android:layout_height="wrap_content"
	   	    android:src="@drawable/av_full_screen"
    		android:layout_weight="1" />

        <ImageButton
            android:id="@+id/player_button_repeat_2"
            style="@style/PlayerButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/av_repeat"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/player_button_repeat_3"
            style="@style/PlayerButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/av_repeat"
            android:layout_weight="1" />
    
    </LinearLayout>

    <!-- Current Track Title -->
    <TextView
        android:id="@+id/player_text_current_track"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_above="@+id/player_buttons_row_one"
        android:layout_toRightOf="@+id/pitch_control"
        style="@style/PlayerTextStyle"
        android:text="no track loaded" />

    <!-- Pitch Range -->
    <TextView
        android:id="@+id/pitch_control_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="-10dp"
        android:layout_alignTop="@+id/pitch_control"
        android:layout_toRightOf="@+id/pitch_control"
        style="@style/PlayerTextStyle"
        android:text="  + 10,00 % " />

    <!-- Pitch Control -->
    <org.qstuff.qplayer.ui.util.VerticalSeekBar
        android:id="@+id/pitch_control"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/player_text_version"
        android:layout_above="@id/player_buttons_row_two"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/black_white_border_shape"
        android:max="100"
        android:progress="50"
        android:progressDrawable="@drawable/seekbar_progress_blue"
        android:thumb="@drawable/seekbar_thumb" />

    <!-- Jog Wheel (Mockup)  -->
    <View
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/black_circle_white_border_shape"/>
    
</RelativeLayout>

