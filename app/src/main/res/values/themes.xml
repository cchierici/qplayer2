<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- The theme in use -->

    <style name="Theme.QPlayer" parent="@style/QPlayerDefault"/>

    <!-- The default Impossible theme -->

    <style name="QPlayerDefault" parent="Theme.HoloAccent.NoActionBar">

        <item name="accentColor">@color/q_orange</item>
        <item name="android:spinnerStyle">@style/SpinnerAppTheme</item>

    </style>

    <style name="SpinnerAppTheme" parent="android:Widget.Spinner">
        <item name="android:background">@color/black</item>
    </style>

    <style name="SpinnerDropDownItemAppTheme" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:checkMark">@color/q_orange</item>
    </style>
    
</resources>
