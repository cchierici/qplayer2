<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

<style name="ListView">

</style>

	<style name="ListView.FileList">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:divider">#242424</item>
		<item name="android:dividerHeight">1dp</item>
		<item name="android:background">@android:color/black</item>
	</style>

	<style name="TracklistItemText">
		<item name="android:textColor">@color/very_light_gray</item>
		<item name="android:textSize">16sp</item>
		<item name="android:padding">10dp</item>
	</style>

	<style name="ListView.ChoosePlayList">
		<item name="android:divider">#242424</item>
		<item name="android:dividerHeight">1dp</item>
	</style>

	<style name="PlaylistItemText">
		<item name="android:textColor">@color/very_light_gray</item>
		<item name="android:textSize">16sp</item>
		<item name="android:padding">10dp</item>
	</style>

	<style name="PlayerButtonStyle">
		<item name="android:background">@drawable/black_white_border_shape</item>
		<item name="android:gravity">center</item>
		<item name="android:layout_marginLeft">5dp</item>
		<item name="android:layout_marginRight">5dp</item>
		<item name="android:padding">5dp</item>
	</style>

    <style name="PlayerTextStyle">
        <item name="android:background">@drawable/black_rounded_shape</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
    
	
</resources>